<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="45dp"
        android:layout_above="@+id/btFAB"
        android:background="@color/white">

        <!--android:background="@drawable/customborder"-->
        <ImageView
            android:layout_width="10px"
            android:layout_height="fill_parent"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#ffe05f" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mujer"
            android:id="@+id/radioButton"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView4"
            android:checked="false"
            android:layout_marginLeft="22px"
            android:layout_marginBottom="22px" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hombre"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/radioButton"
            android:layout_marginLeft="22px"
            android:layout_marginBottom="22px" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:ems="10"
            android:id="@+id/nom"
            android:layout_marginLeft="22px"
            android:background="#ebeef0"
            android:layout_alignTop="@+id/ape"
            android:layout_toEndOf="@+id/imageView4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:inputType="textPersonName"
            android:text="Apellidos"
            android:ems="10"
            android:id="@+id/ape"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/nom"
            android:layout_marginLeft="22px"
            android:background="#ebeef0"
            android:layout_marginTop="22px" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:inputType="textPersonName"
            android:text="Estado Civil"
            android:ems="10"
            android:id="@+id/EstadoCivil"
            android:layout_marginLeft="22px"
            android:background="#ebeef0"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/imageView4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:text="Fecha de nacimiento"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/ape"
            android:textColor="#ffffff"
            android:background="#52c3ff" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btFAB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        android:layout_gravity="left|bottom"
        android:src="@mipmap/ic_action_next_item"
        app:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp" />

</RelativeLayout>